# 生产环境配置

# 应用配置
NODE_ENV=production
APP_PORT=3000

# Nginx配置
NGINX_PORT=80
NGINX_SSL_PORT=443
NGINX_DOMAIN=api.clawstep.com

# 生产环境数据库配置（云服务）
# 示例：阿里云RDS PostgreSQL
DATABASE_URL="postgresql://username:password@rm-xxxxx.pg.rds.aliyuncs.com:5432/clawstep_prod?schema=public"
POSTGRES_USER=clawstep_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=clawstep_prod
POSTGRES_PORT=5432

# 生产环境Redis配置（云服务）
# 示例：阿里云Redis
REDIS_URL=redis://:your_redis_password@r-xxxxx.redis.rds.aliyuncs.com:6379
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT配置（生产环境使用强密钥）
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-for-production-environment-2024

# 短信服务配置（阿里云短信服务）
SMS_ACCESS_KEY=your_aliyun_access_key
SMS_SECRET_KEY=your_aliyun_secret_key
SMS_SIGN_NAME=爪步旅行
SMS_TEMPLATE_CODE=SMS_123456789

# 短信服务配置（腾讯云短信服务 - 备选）
# SMS_ACCESS_KEY=your_tencent_secret_id
# SMS_SECRET_KEY=your_tencent_secret_key
# SMS_SIGN_NAME=爪步旅行
# SMS_TEMPLATE_CODE=123456

# 短信服务配置（华为云短信服务 - 备选）
# SMS_ACCESS_KEY=your_huawei_access_key
# SMS_SECRET_KEY=your_huawei_secret_key
# SMS_SIGN_NAME=爪步旅行
# SMS_TEMPLATE_CODE=123456

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# 安全配置
CORS_ORIGIN=https://clawstep.com,https://www.clawstep.com
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# 监控配置
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# 邮件服务配置（可选）
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@clawstep.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@clawstep.com

# 第三方服务配置

# 苹果登录配置
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# 移动运营商SDK配置
CARRIER_SDK_APP_ID=your_carrier_sdk_app_id
CARRIER_SDK_APP_SECRET=your_carrier_sdk_app_secret
